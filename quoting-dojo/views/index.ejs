<body>
    <form action="/quotes" method='post'>
        <h1>Welcome to QuotingDojo</h1>
        <div class="box0"> 
            <div> 
                <label class="col-lg-2">Your Name: </label>
                <input type="text" class="form-control" name="name">
                <label class="col-lg-2">Your quote: </label>
                <textarea type="text" class="form-control" name="quote"></textarea>
            </div> 
            <button type="submit" class="btn btn-primary">Add my quote!</button>
            <a href="/quotes" type="button" class="btn btn1 btn-outline-success">Skip to quote!</a>
        </div>
    </form>
